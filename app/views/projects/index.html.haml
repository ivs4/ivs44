=breadcrumb_tag do
  %li.active
    Проекты
  %li
    Проект

.page-header
  %h1= t('headers.projects.index')

= link_to new_project_path, class: 'btn btn-success' do
  = fa_icon :plus
  = t('buttons.new.project')

.row
  .col-xs-12
    %table.table.table-hover
      %tbody
        - @projects.each do |project|
          %tr.active
            %th= Project.human_attribute_name(:name)
            %td= project.name
          %tr
            %th= Project.human_attribute_name(:start_date)
            %td= project.start_date
          %tr
            %th= Project.human_attribute_name(:finish_date)
            %td= project.finish_date
          %tr
            %th= Project.human_attribute_name(:price)
            %td= project.price
          %tr

            %td
              = link_to project, class: 'btn btn-warning' do
                = fa_icon :eye
                = t('buttons.show')
              = link_to edit_project_path(project), class: 'btn btn-info' do
                = fa_icon :edit
                = t('buttons.edit')
              = link_to project, :method => :delete,
              :data => { :confirm => t('buttons.confirm.project') },
              class: 'btn btn-danger' do
                = fa_icon :times
                = t('buttons.destroy')
            %td
