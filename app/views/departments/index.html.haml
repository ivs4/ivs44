=breadcrumb_tag do
  %li.active
    Отделы
  %li
    Данные об отделе

.page-header
  %h1= t('headers.departments.index')

= link_to new_department_path, class: 'btn btn-success' do
  = fa_icon :plus
  = t('buttons.new.department')

.row
  .col-xs-12
    %table.table.table-hover
      %tbody
        - @departments.each do |department|
          %tr.active
            %th= Department.human_attribute_name(:name)
            %td= department.name



            %td
              = link_to department, class: 'btn btn-warning' do
                = fa_icon :eye
                = t('buttons.show')
              = link_to edit_department_path(department), class: 'btn btn-info' do
                = fa_icon :edit
                = t('buttons.edit')
              = link_to department, :method => :delete,
              :data => { :confirm => t('buttons.confirm.department') },
              class: 'btn btn-danger' do
                = fa_icon :times
                = t('buttons.destroy')
            %td
