= form_for @worker_project do |f|
  - if @worker_project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@worker_project.errors.count, "error")} prohibited this worker_project from being saved:"
      %ul
        - @worker_project.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :worker
    = f.text_field :worker
  .field
    = f.label :project
    = f.text_field :project
  .actions
    = f.submit 'Save'
